<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Создать будильник"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_revert"
            android:background="?selectableItemBackgroundBorderless"
            android:contentDescription="Назад"
            android:layout_gravity="end" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:id="@+id/rootSetAlarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/card_set_alarm">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Время будильника"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"
                        android:textColor="@color/text_primary"/>

                    <TimePicker
                        android:id="@+id/timePicker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/card_set_alarm">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvChoose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Тип задания"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"
                        android:textColor="@color/text_primary"/>

                    <RadioGroup
                        android:id="@+id/radioGroupTask"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/rbMath"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Математика"
                            android:tag="math"
                            android:checked="true"
                            android:layout_marginBottom="12dp"/>

                        <RadioButton
                            android:id="@+id/rbTranslate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Перевод (EN → RU)"
                            android:tag="translate"
                            android:layout_marginBottom="12dp"/>

                        <RadioButton
                            android:id="@+id/rbLogic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Логические задачи"
                            android:tag="logic"
                            android:layout_marginBottom="12dp"/>

                        <RadioButton
                            android:id="@+id/rbAttention"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Внимательность (найти число)"
                            android:tag="attention"
                            android:layout_marginBottom="12dp"/>

                        <RadioButton
                            android:id="@+id/rbGenerateWordPuzzle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Собери слово"
                            android:tag="wordpuzzle"
                            android:layout_marginBottom="12dp"/>

                        <RadioButton
                            android:id="@+id/rbCombo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Смешанные задачи"
                            android:tag="combo"
                            android:layout_marginBottom="12dp"/>

                    </RadioGroup>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/card_set_alarm">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Описание"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"
                        android:textColor="@color/text_primary"/>

                    <TextView
                        android:id="@+id/tvTaskDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Решите математические примеры для отключения будильника"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:lineSpacingExtra="4dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/background">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSaveAlarm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Сохранить будильник"
                    android:textSize="18sp"
                    android:minHeight="56dp"
                    android:padding="16dp"
                    android:textColor="@color/white"
                    style="@style/Widget.Material3.Button"/>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>